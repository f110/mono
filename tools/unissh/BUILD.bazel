load("@rules_pkg//:pkg.bzl", "pkg_deb", "pkg_tar")

pkg_tar(
    name = "bin",
    srcs = [
        "//tools/unissh/cmd/unissh-list-machines",
    ],
    mode = "0755",
    package_dir = "/usr/local/bin",
)

pkg_deb(
    name = "pkg",
    architecture = "amd64",
    data = ":bin",
    depends = [
        "peco",
    ],
    description = "Easy ssh tool",
    maintainer = "Fumihiro Ito <fmhrit@gmail.com>",
    package = "unissh",
    version = "0.1.0",
)

load("//build:job.bzl", builder_job = "job")

builder_job(
    name = "unissh",
    all_revision = True,
    command = "build",
    target = ":pkg",
)

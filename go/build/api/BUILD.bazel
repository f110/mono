load("//build/rules/go:grpc.bzl", "vendor_grpc_source")

go_library(
    name = "api",
    srcs = [
        "api.pb.go",
        "api_grpc.pb.go",
        "apiservice.go",
        "server.go",
    ],
    importpath = "go.f110.dev/mono/go/build/api",
    visibility = ["//visibility:public"],
    deps = [
        "//go/build/config",
        "//go/build/database",
        "//go/build/database/dao",
        "//go/build/model",
        "//go/enumerable",
        "//go/logger",
        "//go/storage",
        "//go/varptr",
        "@com_github_google_go_github_v73//github",

go_proto_library(
    name = "api_go_proto",
    compilers = ["@rules_go//proto:go_proto"],
    importpath = "go.f110.dev/mono/go/build/api",
    proto = "//proto/build/api",
    visibility = ["//visibility:private"],
)

go_proto_library(
    name = "api_go_grpc",
    compilers = ["@rules_go//proto:go_grpc_v2"],
    importpath = "go.f110.dev/mono/go/build/api",
    proto = "//proto/build/api",

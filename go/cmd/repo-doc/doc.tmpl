<!DOCTYPE html>
<html>
<head>
  <title>{{ .Title }} - {{ .PageTitle }}</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
  <link rel="stylesheet" href="/style.css">
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
</head>
<body>

<div class="ui fixed massive borderless menu">
  <div class="ui container">
    <p class="header item">{{ .Title }}</p>

    <div class="right item">
      <div class="ui icon input">
        <input type="text" placeholder="Search" class="prompt">
        <i class="search link icon"></i>
      </div>
    </div>
  </div>
</div>

<div class="ui grid main container">
  <div class="row">
    <div class="eleven wide column">
      <div class="ui borderless menu">
        <div class="item">
          <div class="ui breadcrumb">
            {{ range $i, $v := .Breadcrumb -}}
            <a class="section">{{ $v }}</a>
            {{ if ne $i $.BreadcrumbLastIndex }}<div class="divider"> / </div>{{ end -}}
            {{ end -}}
          </div>
        </div>
      </div>
    </div>

    <div class="five wide column">
      <div class="ui icon compact menu">
        <a class="item pagemenu" data-content="Raw"><i class="file outline icon"></i></a>
        <a class="item pagemenu" data-content="Edit"><i class="edit icon"></i></a>
        <a class="item pagemenu" data-content="Copy permalink"><i class="clipboard outline icon"></i></a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="eleven wide column doc">
    {{ .Content }}
    </div>

    <div class="five wide column">
      <div class="ui container toc">
        <h2>Table of Contents</h2>
        <ol class="ui list">
          {{ range .TableOfContent -}}
          <li><a href="#{{ .Anchor }}">{{ .Title }}</a>
          {{- if and (not .Up) (not .Down) -}}
          </li>
          {{ end -}}
          {{ if .Down }}
          <ol>
          {{ end -}}
          {{ if .Up -}}
          </li>
          </ol>
          {{ end -}}
          {{ end -}}
        </ol>
      </div>
    </div>
  </div>
</div>
<script>
$('.pagemenu')
  .popup()
;
</script>
</body>
</html>

load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "srcs",
    srcs = glob([
        "**/*.c",
        "**/*.h",
        "**/*.ps",
        "**/*.mak",
        "**/Makefile*",
        "**/*.m4",
        "**/*.peg",
        "**/*.in",
    ]) + [
        "autogen.sh",
        "configure.ac",
        "misc/txt2cstr",
        "misc/optlib2c",
    ],
)

configure_make(
    name = "ctags",
    autogen = True,
    configure_in_place = True,
    configure_options = [
        "CFLAGS='-Dredacted=\"redacted\"'",
        "--enable-json",
        "--enable-seccomp",
        "--disable-xml",
        "--disable-yaml",
        "--without-included-regex",
    ],
    env = {
        "LDFLAGS": "-static",
    },
    install_prefix = "install",
    lib_name = "universal-ctags",
    lib_source = ":srcs",
    out_binaries = ["ctags"],
    visibility = ["//visibility:public"],
)
